@model Student_CRUD_Operation.Models.Student

@if (Model is null)
{
    <h1>No student was found with this Id</h1>
}
else
{
    <form method="post">
        <h1>Edit Student</h1>

        <input type="hidden" asp-for="Id" /> <!-- Important for edit operations -->

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-dark">Edit</button>

            <!-- Separate form for delete (recommended approach) -->
            <button type="submit"
                    class="btn btn-danger"
                    formaction="@Url.Action("Delete", "Student", new { id = Model.Id })"
                    formmethod="post"
                    onclick="return confirm('Are you sure you want to delete this student?');">
                Delete
            </button>
        </div>
    </form>
}