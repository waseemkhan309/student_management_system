@{
}
@model List<Student_CRUD_Operation.Models.Student>

<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
           {
               <tr>
                   <td>@item.Id</td>
                   <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-controller="student" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                </td>
               </tr>
           }
    </tbody>
</table>
